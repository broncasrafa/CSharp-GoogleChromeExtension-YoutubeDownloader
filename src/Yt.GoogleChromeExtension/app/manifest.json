{
    "name": "Youtube downloader",
    "description": "Use esta extensao para baixar os seus videos favoritos do youtube",
    "version": "1.0",
    "background": {
        "scripts": [ "jquery.min.js", "background.js" ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [ "jquery-2.2.0.min.js", "popup.js" ]
        }
    ],

    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "popup.html"
    },
    "manifest_version": 2
}